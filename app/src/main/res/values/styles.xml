<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="style_auth_field">
        <item name="android:ems">10</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/auth_input_style</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="style_button_black">
        <item name="android:background">@drawable/button_rounded_black</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="addfood_name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="addfood_desc">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_label_enter">
        <item name="android:textSize">@dimen/text_head</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_tv_nutrient">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="addfood_tv_nutrient_precent">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_label_carbs">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/blueMacro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_label_proteins">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/greenMacro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_label_fats">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/orangeMacro</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="addfood_label_total">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="tv_overview_foodname">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_head</item>
    </style>
    <style name="tv_overview_foodlabel">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/red</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>